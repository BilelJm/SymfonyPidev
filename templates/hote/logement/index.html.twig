{% extends 'hote_layout.html.twig' %}

{% block title %}Logements {% endblock %}

{% block body %}

    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des logements</h4>

                    </p>
                    <div class="table-responsive">
                        <table class="table table-hover ">
                            <thead>
                            <tr>
                                <th>Image</th>
                                <th>ID</th>
                                <th>Titre</th>
                                <th>Description</th>
                                <th>Addresse</th>
                                <th>Equipements</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for logement in logements %}
                                <tr>
                                 <td>
                                     {% if logement.filename %}
                                     <img src="{{ vich_uploader_asset(logement,'imageFile') }}" alt="card-img-top" style="width: 100%; height:auto;">{# Chargement de l'image avec vich #}
                                     {% endif %}
                                 </td>
                                <td>{{ logement.id }}</td>
                                <td>{{ logement.titre }}</td>
                                <td>{{ logement.description|length > 30 ? logement.description|slice(0, 30) ~ '...' :  logement.description  }}</td>
                                <td>{{ logement.addresse }}</td>
                                <td>
                                    {% for equipment in logement.equipements %}
                                        {{ equipment.nom }} /
                                    {% endfor %}
                                </td>
                                <td>
                                    <a class="btn btn-success" href="{{ path('logement_show', {'id': logement.id}) }}"> <i class="mdi mdi-eye"></i> Afficher</a>
                                    <a class="btn btn-warning " href="{{ path('logement_edit', {'id': logement.id}) }}"> <i class="mdi mdi-tooltip-edit"></i> Editer</a>
                                    <a class="btn btn-danger "
                                       href="{{ path('logement_delete', {'id': logement.id}) }}"> <i class="mdi mdi-delete"></i> Supprimer</a>
                                </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <a class="btn btn-success mt-3" href="{{ path('logement_new') }}"><i class="mdi mdi-home-plus"></i> Cr√©er un nouveau logement</a>

                </div>
            </div>
        </div>


    </div>
{% endblock %}
