{% extends 'hote_layout.html.twig' %}

{% block title %}Logement{% endblock %}

{% block body %}
    <h1>Logement</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <h6>QR Code</h6>
                </div>
            </div>
            {% if logement.qrFileName %}
                <img src="{{ vich_uploader_asset(logement,'imageQrFile') }}" style="width: 300px;height: 300px" >{# Chargement de l'image avec vich #}
            {% endif %}
        </div>

    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Image</th>
                <th>
                    {% if logement.filename %}
                        <img src="{{ vich_uploader_asset(logement,'imageFile') }}" alt="card-img-top" style="width: 200px; height:200px;">{# Chargement de l'image avec vich #}
                    {% endif %}
                </th>
            </tr>

            <tr>
                <th>Id</th>
                <td>{{ logement.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ logement.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>

                <td>{{ logement.description|length > 30 ? logement.description| nl2br :  logement.description  }}</td>

            </tr>
            <tr>
                <th>Addresse</th>
                <td>{{ logement.addresse }}</td>
            </tr>
            <tr>
                <th>Equipement</th>

                <td>
                    {% for equipment in logement.equipements %}
                        {{ equipment.nom }} /
                    {% endfor %}
                </td>

            </tr>
            <tr>
                <th>QR CODE</th>



            </tr>
        </tbody>
    </table>


    <a class="btn btn-behance mt-2" href="{{ path('logement_index') }}"><i class="mdi mdi-arrow-left"></i> Retour</a>

    <a  class="btn btn-warning mt-2" href="{{ path('logement_edit', {'id': logement.id}) }}"> <i class="mdi mdi-tooltip-edit"> </i> Modifier</a>

    {{ include('hote/logement/_delete_form.html.twig') }}
{% endblock %}
