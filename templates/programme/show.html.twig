{% extends 'back-officenewprog.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}
    <h1>Programme</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programme.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ programme.Titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ programme.Description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ programme.prix }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ programme.date ? programme.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ programme.adresse }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ programme.category}}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ programme.statut }}</td>
            </tr>
            <tr>
                <th>Guide</th>
                <td>{{ programme.Guide }}</td>
            </tr>
            <tr>
                <th>Transport</th>
                <td>{{ programme.transport }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ programme.image }}</td>
            </tr>
            <tr>
                <th></th>
                <td>{{ programme.image2 }}</td>
            </tr>
            <tr>
                <th></th>
                <td>{{ programme.image3 }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('programme_index') }}">back to list</a>

    <a href="{{ path('programme_edit', {'id': programme.id}) }}">edit</a>

    {{ include('programme/_delete_form.html.twig') }}
{% endblock %}
