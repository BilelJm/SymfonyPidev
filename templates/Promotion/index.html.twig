{% extends 'back-office.html.twig' %}

{% block title %}Promotion{% endblock %}

{% block body %}
    <h1>Promotion </h1>

    <table class="table">
        <thead>
        <tr>

            <th>Taux</th>
            <th>Date Debut</th>
            <th>Date Fin</th>

        </tr>
        </thead>
        <tbody>
        {% for promo in promos %}
            <tr>

                <td>{{ promotion.date_debut? promotion.date_debut|date('Y-m-d') : '' }}</td>
                <td>{{ promotion.date_fin ? promotion.date_fin|date('Y-m-d') : '' }}</td>
                <td>{{ promotion.taux }}</td>


                <td>
                    <a href="{{ path('promotion_show', {'id': promotion.id}) }}">show</a>
                    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('promotion_new') }}">Create new</a>
{% endblock %}
