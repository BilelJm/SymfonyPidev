{% extends 'back-office.html.twig' %}
{% block title %}New Promotion {% endblock %}

{% block body %}



<div class="card col-lg-15 mx-auto">
    <div class="card-body px-50 py-50">


        <div class="form-group">
            {{ form_label(form.date debut) }}
            {{ form_errors(form.date debut)  }}
            {{ form_widget(form.date debut, {'attr':{'class':'form-control p_input'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.date fin) }}
            {{ form_errors(form.date fin)  }}
            {{ form_widget(form.date fin, {'attr':{'class':'form-control p_input'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.taux) }}
            {{ form_errors(form.taux)  }}
            {{ form_widget(form.taux , {'attr':{'class':'form-control p_input'}}) }}
        </div>

        <div class="form-group">
            {{ form_rest(form) }}
        </div>

        {{ form_end(form) }}
    </div>
</div>
